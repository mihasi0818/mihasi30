<!-- app/views/inquiries_mailer/new.html.erb -->
<%= form_with(model: @inquiry, url: inquiries_path, class: "inquiry-form") do |form| %>

  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :email %>
  <%= form.email_field :email %>

  <%= form.label :message %>
  <%= form.text_area :message %>

  <%= form.submit "送信" %>
<% end %>

